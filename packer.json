{
    "variables": {
        "aws_access_key": "", "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}", "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-west-1",
            "source_ami": "ami-da1810ae",
            "instance_type": "t1.micro",
            "ssh_username": "ubuntu",
            "ami_name": "packer-example {{timestamp}}"
        }
    ],
    "provisioners": [
        { "type": "file", "source": "./cookbooks-with-dependencies", "destination": "/tmp" },
        { "type": "shell", "inline": "sudo apt-get update" },
        {
            "type": "chef-solo", "remote_cookbook_paths": ["/tmp/cookbooks-with-dependencies"],
            "run_list": ["python", "java", "ark", "mysql::server", "firewall", "nginx",
                "jtalks::cicd", "jtalks::firewall", "jtalks::webapps", "jtalks::nginx"]
        }
    ]
}